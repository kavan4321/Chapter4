<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Chapter4.View.Page1"
             xmlns:Booking="clr-namespace:Chapter4.ViewModel.Train"
             Title="Page1">
    <ContentPage.BindingContext>
        <Booking:Page1ViewModel></Booking:Page1ViewModel>
    </ContentPage.BindingContext>
    <ScrollView>
        <StackLayout>
            <StackLayout
                Margin="10,30,10,10"
                Orientation="Horizontal">
                <VerticalStackLayout>
                    <Label
                        Text="{Binding Name,StringFormat='Hello, {0}'}"
                        TextColor="Gray"
                    ></Label>
                    <Label
                        FontAttributes="Bold"
                        FontSize="25"
                        Text="Where are you going?"
                ></Label>
                </VerticalStackLayout>
                <Image
                    Source="profile"
                    HorizontalOptions="EndAndExpand"
                HeightRequest="40"></Image>
            </StackLayout>
            <Frame
                BorderColor="White"
                Margin="10,20,10,10"
                Padding="10"
                BackgroundColor="GhostWhite">
                <StackLayout>
                <Grid 
                    RowDefinitions="*,*"
                    ColumnDefinitions="*,*"
                    RowSpacing="10">
                        <Frame
                            Padding="0"
                            Grid.Row="0"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            CornerRadius="20"
                            BackgroundColor="White">

                            <VerticalStackLayout
                            Grid.Row="0"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            BackgroundColor="White">
                                <Label
                                Margin="10,5,0,0"
                                TextColor="LightGray"
                                Text="From Station"></Label>
                                <Entry     
                                 Margin="10,0,0,0"
                                Placeholder="From Station"
                                FontSize="16"></Entry>
                            </VerticalStackLayout>
                        </Frame>

                        <Frame
                            Padding="0"
                            Grid.Row="1"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            CornerRadius="20"
                            BackgroundColor="White">

                            <VerticalStackLayout
                            Grid.Row="0"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            BackgroundColor="White">
                                <Label
                                Margin="10,5,0,0"
                                TextColor="LightGray"
                                Text="To Station"></Label>
                                <Entry     
                                 Margin="10,0,0,0"
                                Placeholder="To Station"
                                FontSize="16"></Entry>
                            </VerticalStackLayout>
                        </Frame>
                        <Button
                         Grid.Row="0"
                        Grid.Column="1"
                        Grid.RowSpan="2"
                        Margin="0,0,10,0"
                        VerticalOptions="Center"
                        HorizontalOptions="End"
                        HeightRequest="50"
                        WidthRequest="50"
                        CornerRadius="50"
                        Text="↕️"></Button>
                    </Grid>
                
                    
                <Grid
                    Margin="0,10,0,10"
                    RowDefinitions="*"
                    ColumnDefinitions="*,*"
                    ColumnSpacing="10">
                        <Frame
                           Padding="0"
                           CornerRadius="20"
                           BorderColor="White"
                           Grid.Column="0"
                           Grid.Row="0" >
                            <VerticalStackLayout>
                                <Label
                                     Margin="10,5,0,0"
                                    TextColor="LightGray"
                                    Text="Departure"></Label>
                                <DatePicker 
                                    Margin="10,0,10,0"
                                    BackgroundColor="White"
                                    Format="MMM dd,yyyy"
                                ></DatePicker>
                            </VerticalStackLayout>
                        </Frame>
                        <Frame
                           Padding="0"
                           CornerRadius="20"
                           BorderColor="White"
                           Grid.Column="1"
                           Grid.Row="0" >
                            <VerticalStackLayout>
                                <Label
                                    Margin="10,5,0,0"
                                    TextColor="LightGray"
                                    Text="Return"></Label>
                                <DatePicker 
                                    Margin="10,0,10,0"
                                    BackgroundColor="White"
                                    Format="MMM dd,yyyy"
                                ></DatePicker>
                            </VerticalStackLayout>
                        </Frame>
                    </Grid>
                    <Button
                    Margin="0,10,0,0"
                    HeightRequest="59"
                    Text="Search Train"
                    CornerRadius="10"></Button>
                </StackLayout>
            </Frame>
            <StackLayout
                Margin="10"
                Orientation="Horizontal">
                <Label   
                FontSize="22"
                FontAttributes="Bold"
                Text="Upcomming Ticket"
                VerticalOptions="Center"
                HorizontalTextAlignment="Start"
                ></Label>
                <Button        
                    HeightRequest="50"                
                    HorizontalOptions="EndAndExpand"
                    BackgroundColor="White"
                    TextColor="Blue"
                    VerticalOptions="Center"
                    Text="See All"></Button>
            </StackLayout>
            <Frame 
                Margin="10,0,10,0"
                CornerRadius="20"
                Padding="10,20,10,20"
                BorderColor="LightCyan"
                BackgroundColor="LightCyan">
                <StackLayout>
                    <StackLayout
                        Orientation="Horizontal">
                        <Frame
                            CornerRadius="10"
                            BorderColor="Cyan"
                            BackgroundColor="Cyan"
                            Padding="0">
                            <StackLayout 
                                Margin="5,0,5,0"
                                Orientation="Horizontal">
                                <Label
                                    Text="📆"
                                    VerticalOptions="Center"
                                    ></Label>
                                <DatePicker
                                    Format="MMM dd,yyyy"
                                    HorizontalOptions="EndAndExpand"
                                ></DatePicker>
                            </StackLayout>
                        </Frame>
                        <Frame
                            HorizontalOptions="EndAndExpand"
                            CornerRadius="10"
                            BorderColor="Cyan"
                            BackgroundColor="Cyan"
                            Padding="0">
                            <StackLayout 
                                Margin="5,0,5,0"
                                Orientation="Horizontal">
                                <Label
                                    Text="⌚"
                                    VerticalOptions="Center"
                                    ></Label>
                                <TimePicker
                                    Format="hh:MM"
                                    HorizontalOptions="EndAndExpand"
                                ></TimePicker>
                            </StackLayout>
                        </Frame>
                    </StackLayout>
                </StackLayout>
            </Frame>
            <Line 
                Margin="20,0,20,0"
                X1="0"
                Y1="0"
                X2="1000"
                Y2="0"
                Stroke="LightGray"
                StrokeDashArray="10,10"
                StrokeDashOffset="6" ></Line>
            <Frame
                Margin="10,0,10,10"
                CornerRadius="20"
                BorderColor="LightCyan"
                BackgroundColor="LightCyan"
                Padding="10">
                <StackLayout>
                    <Grid 
                        RowDefinitions="*"
                        ColumnDefinitions="*,60,*">
                        <VerticalStackLayout
                            Grid.Column="0"
                            Grid.Row="0">
                            <Label
                               Text="PSE"
                                FontSize="25"
                                FontAttributes="Bold"
                                ></Label>
                            <Label
                                TextColor="Gray"
                                Text="Pasar Senen"></Label>
                        </VerticalStackLayout>
                        <Image
                            Grid.Row="0"
                            Grid.Column="1"
                            Source="train"
                            HeightRequest="50"
                            ></Image>
                        <VerticalStackLayout
                            Grid.Column="2"
                            Grid.Row="0"
                            HorizontalOptions="EndAndExpand">
                            <Label
                               Text="Balapan"
                                FontSize="25"
                                FontAttributes="Bold"
                                HorizontalOptions="EndAndExpand"
                                ></Label>
                            <Label
                                TextColor="Gray"
                                HorizontalOptions="EndAndExpand"
                                Text="Surakarta"></Label>
                        </VerticalStackLayout>
                    </Grid>
                </StackLayout>
            </Frame>
            <Grid               
                Padding="20"
                ColumnSpacing="10"
                BackgroundColor="LightCyan"
                VerticalOptions="EndAndExpand"
                RowDefinitions="*"
                ColumnDefinitions="*,*,*,*">
                <ImageButton
                    Grid.Column="0"
                    Grid.Row="0"
                    HeightRequest="30"
                    Source="home.png"></ImageButton>
                <ImageButton
                    Grid.Column="1"
                    Grid.Row="0"
                     HeightRequest="30"
                    Source="alert.png"></ImageButton>
                <ImageButton
                    Grid.Column="2"
                    Grid.Row="0"
                     HeightRequest="30"
                    Source="ticket.png"></ImageButton>
                <ImageButton
                    Grid.Column="3"
                    Grid.Row="0"
                     HeightRequest="30"
                    Source="profile.png"></ImageButton>
            </Grid>
        </StackLayout>
    </ScrollView>
</ContentPage>