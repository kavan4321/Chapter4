                    <StackLayout
                        Grid.Column="0"
                        BackgroundColor="Gray">
                        <Label
                            Margin="20,20,0,0"
                            TextColor="White"
                            Text="Furniture">
                        </Label>
                        <Label                           
                            Margin="20,0,0,0"
                            TextColor="White"
                            Text="Super Complete!"></Label>
                        <Label
                            Margin="20,0,0,0"
                            FontSize="18"
                            TextColor="White"
                            Text="CASBACK UP TO"></Label>
                        <Label
