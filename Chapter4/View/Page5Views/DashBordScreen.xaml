                        <Label
                            FontSize="18"
                            FontAttributes="Bold"
                            HorizontalOptions="Center"
                            Text="$420"></Label>
                    </StackLayout>
                </Frame>
                <Frame              
                    Grid.Column="1">
                    <StackLayout>
                        <Image 
                            HeightRequest="100"
                            Source="chairthree"></Image>
                        <Label
                            FontSize="16"
                            FontAttributes="Bold"
                            HorizontalOptions="Center"
                            Text="vualerel Chair"></Label>
                        <HorizontalStackLayout 
                            HorizontalOptions="Center">
                            <Label
                                Text="⭐4.9|"></Label>
                            <Label
                                Text="Sold 400"></Label>
                        </HorizontalStackLayout>
                        <Label
                            FontSize="18"                         
                            FontAttributes="Bold"
                            HorizontalOptions="Center"
                            Text="$420"></Label>
                    </StackLayout>
                </Frame>
            </Grid>
        </StackLayout>
    </ScrollView>
</ContentPage>